{
  "swagger": "2.0",
  "info": {
    "description": "This is a Swagger Documentation for the contacts API",
    "version": "1.0.0",
    "title": "Contacts API",
    "contact": {
      "email": "ahmed.r.shaban96@gmail.com"
    },
    "license": {
      "name": "Apache 2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
    }
  },
  "schemes": [
    "https",
    "http"
  ],
  "host": "localhost:5000",
  "basePath": "/api/v1",
  "tags": [
    {
      "name": "auth",
      "description": "Operations for authentication"
    },
    {
      "name": "contacts",
      "description": "operations related to adding or retriving contacts"
    }
  ],
  "paths": {
    "/auth/register": {
      "get": {
        "tags": [
          "auth"
        ],
        "summary": "register new user to the system",
        "description": "register new user to the system",
        "produces": ["application/json"],
        "consumes": ["application/json"],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "task object",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "task": {
                  "type": "object",
                  "$ref": "#/definitions/Task"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "successful registeration",
            "schema": {
              "type": "#/definitions/authResponse"
            }
          },
          "400": {
            "description": "Invalid status value",
            "schema": {
              "$ref": "#/definitions/InvalidResponse"
            }
          }
        }
      }
    },
    "/auth/login": {
      "post": {
        "tags": [
          "auth"
        ],
        "summary": "Login user and return an access token for user",
        "description": "Login user and return an access token for user",
        "produces": ["application/json"],
        "consumes": ["application/json"],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "task object",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "task": {
                  "type": "object",
                  "$ref": "#/definitions/Task"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/todosResponse"
              }
            }
          },
          "400": {
            "description": "Invalid status value",
            "schema": {
              "$ref": "#/definitions/InvalidResponse"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "authResponse": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer"
        },
        "tokens": {
          "type": "object",
          "properties": {
            "accessToken": {
              "type": "string"
            }
          }
        }
      },
      "InvalidResponse": {
        "type": "object",
        "properties": {
          "statusCode": {
            "type": "string"
          },
          "message": {
            "type": "string"
          }
        }
      }
    }
  }
}
